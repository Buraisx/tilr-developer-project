<header class="row header">
  <div class="col-12 header__button-group">
    <%= link_to 'View groups', groups_path, class: "btn btn-outline-warning" %>
    <%= link_to 'Add contact', new_contact_path, class: "btn btn-outline-success" %>
  </div>
  <%= form_tag( search_path, :method => "get", class: "form-inline col-12") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search based on name, email, or phone number.", class: "form-control header__search-bar" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</header>
<%= render 'layouts/display_contacts', contacts: @contacts %>