<%= form_with model: group do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <p>Add contacts:</p>
    <%= form.collection_select(:contact_ids, Contact.all, :id, :full_name, {}, {:multiple => true, :class => "form-control"}) %>
  </div>
  <%= form.submit class: "btn btn-primary"%>
<% end %>